<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <cn.tsy.base.views.HeaderView.CircleProgressBar
        android:id="@+id/progress_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:circle_color="#FF285A"
        app:circle_color_init="#2FFF285A"
        app:circle_radiu="15dp"
        app:is_show_txt="false" />

    <ProgressBar
        android:id="@+id/progress_loading"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_load" />
</RelativeLayout>